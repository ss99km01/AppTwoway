<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jefeko.apptwoway.ui.order.OrderListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!-- 상품주문 내역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:layout_weight="52"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                style="@style/Text_Black_14"
                android:text="상품주문 내역"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:gravity="center"
            android:background="@drawable/table_bar"
            android:orientation="horizontal">
            <TextView
                style="@style/Text_Center_Black_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="주문날짜"/>
            <TextView
                style="@style/Text_Center_Black_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="판매처"/>
            <TextView
                style="@style/Text_Center_Black_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="상품명"/>
            <TextView
                style="@style/Text_Center_Black_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="금액"/>
            <TextView
                style="@style/Text_Center_Black_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="처리상태"/>
            <TextView
                style="@style/Text_Center_Black_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:text="상세내역"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_order_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="484"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textSize="@dimen/dimen_12"
            android:paddingLeft="@dimen/dimen_16"
            android:textColor="#000000"
            android:text="@string/order_cancel_message"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"/>
    </LinearLayout>

    <include
        layout="@layout/layout_detail_order"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>

