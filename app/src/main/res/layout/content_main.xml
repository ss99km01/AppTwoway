<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="724"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jefeko.apptwoway.ui.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="652"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_obtain_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="mOnClick"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="판매(수주)관리"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/arlam_1"
                    android:layout_width="@dimen/dimen_28"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_60"
                    android:background="@drawable/arlam_red"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_20"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="mOnClick"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/order_manage"
                    android:gravity="center"
                    />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_talk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="mOnClick"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="웨이톡"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/arlam_2"
                    android:layout_width="@dimen/dimen_28"
                    android:layout_height="@dimen/dimen_28"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_86"
                    android:background="@drawable/arlam_red"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_20"
                    android:gravity="center"
                    android:visibility="gone"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_basic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="mOnClick"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="기초관리"
                    android:gravity="center"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/layout_common_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="72"/>

</LinearLayout>
