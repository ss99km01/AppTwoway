<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:id="@+id/layout_order_5"
    tools:context="com.jefeko.apptwoway.ui.order.OrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_658"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="#FFFFFF"
                android:orientation="vertical">


                <!-- 상품주문 내역확인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="52"
                    android:paddingLeft="@dimen/dimen_16"
                    android:paddingRight="@dimen/dimen_16"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="16"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/Text_Black_14"
                            android:text="상품주문 내역확인"/>
                        <TextView
                            android:id="@+id/tv_seleted_company_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#0068b7"
                            android:textStyle="bold"
                            android:textSize="@dimen/dimen_14"
                            android:gravity="end"
                            android:text="선택된 사업자 : (주)에이스식자재"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="16"/>
                </LinearLayout>

                <!-- 상품정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="204"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="36"
                        android:gravity="center"
                        android:background="@drawable/table_bar"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Text_Center_Black_14"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="132"
                            android:text="상품명"/>
                        <TextView
                            style="@style/Text_Center_Black_14"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="116"
                            android:text="단위"/>
                        <TextView
                            style="@style/Text_Center_Black_14"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="116"
                            android:text="단가"/>
                        <TextView
                            style="@style/Text_Center_Black_14"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="116"
                            android:text="수량"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_check_product_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="168"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="416"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="총 주문금액 : "
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="@dimen/dimen_20"/>
                        <TextView
                            android:id="@+id/tv_total_price_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="13,000원"
                            android:textStyle="bold"
                            android:textColor="#FF2626"
                            android:textSize="@dimen/dimen_20"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="228"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            style="@style/Text_Black_14"
                            android:text="배송지 선택"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="36"
                            android:background="@drawable/table_border">
                            <Spinner
                                android:id="@+id/spinner_store"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="36"
                                android:paddingLeft="@dimen/dimen_16"
                                android:paddingRight="@dimen/dimen_16">
                            </Spinner>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="24" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            style="@style/Text_Black_14"
                            android:text="기타 메모내용"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16" />
                        <EditText
                            android:id="@+id/edt_request_message"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="84"
                            android:hint="판매자에게 전달할 기타 내용이 있다면 이곳에 입력해주세요."
                            android:textSize="@dimen/dimen_14"
                            android:paddingTop="@dimen/dimen_12"
                            android:paddingLeft="@dimen/dimen_16"
                            android:paddingRight="@dimen/dimen_16"
                            android:paddingBottom="@dimen/dimen_12"
                            android:background="@drawable/memo_13"
                            android:gravity="top"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="36" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="56">
                        <Button
                            android:id="@+id/btn_order_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/btn_order"
                            style="@style/Text_Center_Black_Bold_18"
                            android:background="@drawable/btn_white"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>

