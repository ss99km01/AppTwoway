<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:id="@+id/layout_seller_company_info"
    tools:context="com.jefeko.apptwoway.ui.obtainorder.ObtainOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!-- 사업자 정보 확인하기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="389"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"/>
            <TextView
                android:paddingLeft="@dimen/dimen_16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                style="@style/Text_Black_14"
                android:text="사업자 정보 확인하기"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="281"
                android:background="#EEEEEE"
                android:orientation="vertical">
                <!-- 사업자번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="57"
                    android:padding="@dimen/dimen_1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="96"
                        style="@style/Text_Center_Black_Bold_14"
                        android:text="사업자번호"
                        android:background="@drawable/table_9_1" />
                    <TextView
                        android:id="@+id/tv_busi_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="384"
                        style="@style/Text_VCenter_Black_14"
                        android:paddingLeft="@dimen/dimen_16"
                        android:text="123-45-67891"
                        android:background="@drawable/table_9_2" />
                </LinearLayout>
                <!-- 상호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="56"
                    android:padding="@dimen/dimen_1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="96"
                        style="@style/Text_Center_Black_Bold_14"
                        android:text="상호"
                        android:background="@drawable/table_9_3" />
                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="384"
                        style="@style/Text_VCenter_Black_14"
                        android:paddingLeft="@dimen/dimen_16"
                        android:text="(주)에이스식자재"
                        android:background="@drawable/table_9_4" />
                </LinearLayout>
                <!-- 대표자 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="56"
                    android:padding="@dimen/dimen_1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="96"
                        style="@style/Text_Center_Black_Bold_14"
                        android:text="대표자"
                        android:background="@drawable/table_9_3" />
                    <TextView
                        android:id="@+id/tv_employee_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="384"
                        style="@style/Text_VCenter_Black_14"
                        android:paddingLeft="@dimen/dimen_16"
                        android:text="홍길동"
                        android:background="@drawable/table_9_4" />
                </LinearLayout>
                <!-- 전화번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="56"
                    android:padding="@dimen/dimen_1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="96"
                        style="@style/Text_Center_Black_Bold_14"
                        android:text="전화번호"
                        android:background="@drawable/table_9_3" />
                    <TextView
                        android:id="@+id/tv_tel_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="384"
                        style="@style/Text_VCenter_Black_14"
                        android:paddingLeft="@dimen/dimen_16"
                        android:text="031-123-4567"
                        android:background="@drawable/table_9_4" />
                </LinearLayout>
                <!-- 주소 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="56"
                    android:padding="@dimen/dimen_1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="96"
                        style="@style/Text_Center_Black_Bold_14"
                        android:text="주소"
                        android:background="@drawable/table_9_3" />
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="384"
                        style="@style/Text_VCenter_Black_14"
                        android:paddingLeft="@dimen/dimen_16"
                        android:text="경기도 하남시 역말로15번길"
                        android:background="@drawable/table_9_4" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16" />
        <!-- 대화하기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:orientation="horizontal"
            android:gravity="end">
            <Button
                android:id="@+id/mms_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn_talk"
                android:background="@drawable/btn_gray"
                style="@style/Text_Center_Black_Bold_14"
                android:layout_marginRight="@dimen/dimen_16"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36" />
        <!-- 다시검색 / 주문하기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="56"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_search_again"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_search_again"
                android:textStyle="bold"
                android:background="@drawable/btn_white"
                />
            <Button
                android:id="@+id/btn_reg_sell"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_reg_sell"
                android:textStyle="bold"
                android:background="@drawable/btn_white"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:background="#E5E5E5"/>
    </LinearLayout>

    <include
        layout="@layout/layout_obtain_order_3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
