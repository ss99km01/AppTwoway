<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_10_2"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_10"
    android:paddingBottom="@dimen/dimen_10"
    android:paddingLeft="@dimen/dimen_16"
    android:paddingRight="@dimen/dimen_16">

    <TextView
        android:id="@+id/select_item_prod_name"
        style="@style/Text_VCenter_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="270"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="210"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/select_item_btn_minus"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_36"
            android:layout_weight="36"
            android:background="@drawable/btn_10_min"/>

        <TextView
            android:id="@+id/select_item_amount"
            style="@style/Text_Center_Black_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="78"
            android:background="@drawable/number_box_10"/>

        <Button
            android:id="@+id/select_item_btn_plus"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_36"
            android:layout_weight="36"
            android:background="@drawable/btn_10_plus"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24" />

        <Button
            android:id="@+id/select_item_btn_x"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_36"
            android:layout_weight="36"
            android:background="@drawable/btn_x"
            />

    </LinearLayout>


</LinearLayout>
