<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_56"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_list_item_date"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@drawable/table_14_1" />

    <TextView
        android:id="@+id/order_list_item_company_name"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@drawable/table_14_1" />

    <TextView
        android:id="@+id/order_list_item_product_name"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@drawable/table_14_1" />

    <TextView
        android:id="@+id/order_list_item_total_price"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@drawable/table_14_1" />

    <TextView
        android:id="@+id/order_list_item_status"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@drawable/table_14_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@drawable/table_14_2"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16">

        <Button
            android:id="@+id/order_list_item_more_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Text_Center_Black_Bold_14"
            android:text="@string/btn_more"
            android:background="@drawable/btn_gray"
            />

    </LinearLayout>


</LinearLayout>
