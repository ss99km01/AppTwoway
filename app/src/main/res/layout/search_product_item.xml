<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_10_2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/search_item_prod_name"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="132"
        android:background="@drawable/table_10_1" />

    <TextView
        android:id="@+id/search_item_unit"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="116"
        android:background="@drawable/table_10_2" />

    <TextView
        android:id="@+id/search_item_sell_price"
        style="@style/Text_Center_Black_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="116"
        android:background="@drawable/table_10_3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="116"
        android:background="@drawable/table_10_4"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16">

        <Button
            android:id="@+id/search_item_select_btn"
            style="@style/Text_Center_Black_Bold_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_36"
            android:text="@string/btn_select"
            android:background="@drawable/btn_gray"
            />

    </LinearLayout>


</LinearLayout>
