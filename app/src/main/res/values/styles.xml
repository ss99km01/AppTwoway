<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomOverflowButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomOverflowButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_blue_24dp</item>
    </style>

    <style name="Text_Black_14">
        <item name="android:textSize">@dimen/dimen_14</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text_Center_Black_14" parent="Text_Black_14">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text_VCenter_Black_14" parent="Text_Black_14">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text_Center_Black_Bold_14" parent="Text_Center_Black_14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_VCenter_Black_Bold_14" parent="Text_VCenter_Black_14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Black_18">
        <item name="android:textSize">@dimen/dimen_18</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text_Center_Black_18" parent="Text_Black_18">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text_VCenter_Black_18" parent="Text_Black_18">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text_Center_Black_Bold_18" parent="Text_Center_Black_18">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CheckBoxText">
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dimen_8</item>
        <item name="android:layout_marginRight">@dimen/dimen_8</item>
    </style>

</resources>
